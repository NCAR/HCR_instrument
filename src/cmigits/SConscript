# -*- python -*-
#
# Build cmigitsDaemon
#

tools = ['cmigits', 'qt4', 'QXmlRpcServerAbyss', 'rapradar']

env = Environment(tools = ['default'] + tools)
env.EnableQt4Modules(['QtCore', 'QtGui'])

sources = Split('''
cmigitsDaemon.cpp
Ts2CmigitsShmThread.cpp
''')

headers = Split('''
Ts2CmigitsShmThread.h
''')

daemon = env.Program('cmigitsDaemon', sources)
Default(daemon)
