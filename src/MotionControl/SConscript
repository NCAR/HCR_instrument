# -*- python -*-
#
# Build Motion Control
#

tools = Split("""
    motioncontrol
    QFunctionWrapper
    QXmlRpcServerAbyss
""")

env = Environment(tools = ['default'] + tools)
env.EnableQt4Modules(['QtCore'])

daemon = env.Program('MotionControlDaemon', 'MotionControlDaemon.cpp')
env.Default(daemon)
