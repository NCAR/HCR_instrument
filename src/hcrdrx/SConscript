# -*- python -*-

tools = Split("""
hcrdds
pentek
qtt_qtconfig
boost_date_time
boost_program_options
doxygen
""")

sources = Split("""
main.cpp
""")

headers = Split("""
""")

env = Environment(tools = ['default'] + tools)

p = env.Program('hcrdrx', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(p, html)

