# -*- python -*-

tools = Split("""
hcrpmc730client
boost_date_time
boost_program_options
cmigitsdaemonrpcclient
doxygen
hcrdrxrpcclient
logx
lrose
pentek7142
QFunctionWrapper
qt4
qtt_qtconfig
QXmlRpcServerAbyss
xmitdrpcclient
""")

# Note that DrxStatus.cpp, HcrdrxRpcClient.cpp, and HcrPmc730.cpp are compiled
# via the hcrdrxrpcclient tool
sources = Split("""
HcrDrxConfig.cpp
HcrDrxPub.cpp
IwrfExport.cpp
IwrfExportCmigitsThread.cpp
main.cpp
PulseData.cpp
StatusGrabber.cpp
""")

headers = Split("""
DrxStatus.h
HcrDrxConfig.h
HcrDrxPub.h
HcrdrxRpcClient.h
IwrfExport.h
IwrfExportCmigitsThread.h
PulseData.h
StatusGrabber.h
""")

env = Environment(tools = ['default'] + tools)

hcrdrx = env.Program('hcrdrx', sources)

html = env.Apidocs(sources + headers)
Default(hcrdrx, html)
