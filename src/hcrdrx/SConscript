# -*- python -*-

tools = Split("""
logx
hcrdds
pentek
qtt_qtconfig
boost_date_time
boost_program_options
doxygen
pmc730
rapradar
qt4
""")

sources = Split("""
BurstData.cpp
HcrDrxConfig.cpp
HcrDrxPub.cpp
HcrMonitor.cpp
HcrPmc730.cpp
IwrfExport.cpp
main.cpp
PulseData.cpp
""")

headers = Split("""
BurstData.h
HcrDrxConfig.h
HcrDrxPub.h
HcrMonitor.h
HcrPmc730.h
IwrfExport.h
PulseData.h
""")

env = Environment(tools = ['default'] + tools)

hcrdrx = env.Program('hcrdrx', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(hcrdrx, html)

