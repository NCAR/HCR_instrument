# -*- python -*-

tools = Split("""
boost_date_time
boost_program_options
doxygen
logx
pentek
pmc730
qt4
qtt_qtconfig
rapradar
xmitdrpcclient
""")

sources = Split("""
HcrDrxConfig.cpp
HcrDrxPub.cpp
HcrMonitor.cpp
HcrPmc730.cpp
IwrfExport.cpp
main.cpp
PulseData.cpp
""")

headers = Split("""
HcrDrxConfig.h
HcrDrxPub.h
HcrMonitor.h
HcrPmc730.h
IwrfExport.h
PulseData.h
""")

env = Environment(tools = ['default'] + tools)

hcrdrx = env.Program('hcrdrx', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(hcrdrx, html)

